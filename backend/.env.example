# Server Configuration
PORT=3000
NODE_ENV=development

# Fragment.com Settings
FRAGMENT_URL=https://fragment.com
FRAGMENT_API_URL=https://fragment.com/api

# Synchronization Settings
# Sync interval in seconds (10-30 seconds recommended)
SYNC_INTERVAL_SECONDS=30

# Image Download Settings
# Maximum concurrent image downloads
MAX_CONCURRENT_DOWNLOADS=3

# Retry settings for failed downloads
MAX_RETRIES=3
RETRY_DELAY_MS=1000

# Database Settings
DB_PATH=./database/gifts.db

# Logging
LOG_LEVEL=info

# Cache Settings
CACHE_TTL_SECONDS=60
